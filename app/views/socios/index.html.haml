#region-socios.container

  .region
    .region-title
      %h1.title 
        = page_title!('socios')

    .region
      - if current_admin
        .admin-control
          = link_to 'Crear Socio', new_socio_registration_path, class: 'btn btn-primary'
      - @socios.each do |socio|
        .region-socios-background
          = link_to socio do
            .region-socios
              = image_tag socio.fotografias.first.fotografia_url(:thumb) if socio.fotografias.first
              = socio.nombre
              - if current_admin
                = link_to 'Editar', edit_socio_path(socio), class: 'btn btn-success'
                = link_to 'Eliminar', socio, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger'
