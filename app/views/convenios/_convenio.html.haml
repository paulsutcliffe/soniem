#region-convenios
  .region
    .white
      %h3
        = convenio.nombre
      %p
        = convenio.descripcion

  .region
    - if current_admin
      .admin-controls
        = link_to 'Editar', edit_convenio_path(convenio), class: 'btn btn-success'
        = link_to 'Eliminar', convenio, :method => :delete, :data => { :confirm => '¿Estás Seguro?'}, class: 'btn btn-danger'
