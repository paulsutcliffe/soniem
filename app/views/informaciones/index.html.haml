#region-informaciones.container

  .region
    .region-title
      %h1.title
        = page_title!('Quiénes somos?')
  .region-sidebar
    .white
      - if current_admin
        .admin-control
          = link_to 'Crear Informacion', new_informacion_path, class: 'btn btn-primary'
    
      - @informaciones.each do |informacion|
        = link_to informacion.titulo, informacion, remote: true, class: 'sidebar-links'
      = link_to 'Directivos' , informaciones_directivos_path, remote: true , class: 'sidebar-links'
      = link_to 'Convenios', informaciones_convenios_path, remote: true, class: 'sidebar-links'
      - if current_admin
        = link_to 'Editar', edit_informacion_path(informacion), class: 'btn btn-success'
        = link_to 'Eliminar', informacion, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger'
  .region-informacion
    = render @informacion
