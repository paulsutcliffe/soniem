#region-formatos.container

  .region
    .region-title
      %h1= page_title!('formatos')

    .region
      - if current_admin
        .admin-control
          = link_to 'Crear Formato', new_formato_path, class: 'btn btn-primary'

      .table-responsive
        %table.table
          %tr
            %th Pdf
            %th Titulo
            %th
            %th

          - @formatos.each do |formato|
            %tr
              %td= link_to 'Descargar PDF', formato.pdf_url, download: formato.pdf.filename, class: 'btn btn-success'
              %td= formato.titulo
              - if current_admin
                %td= link_to 'Editar', edit_formato_path(formato), class: 'btn btn-success'
                %td= link_to 'Eliminar', formato, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger'
