#region-formatos.container

  .region
    .region-title
      %h1.title= page_title!('formatos')

    .region
      - if current_admin
        .admin-control
          = link_to 'Crear Formato', new_formato_path, class: 'btn btn-primary'

      - @formatos.each do |formato|
        .region-comunicados
          = link_to  formato.pdf_url, download: formato.pdf.filename do
            .white
              = formato.titulo
              .leer-mas
                %span
                  Descargar
                =image_tag image_path('circle-arrow-down.png');
      
      - if current_admin
        = link_to 'Editar', edit_formato_path(formato), class: 'btn btn-success'
        = link_to 'Eliminar', formato, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger'
