= form_for @tema_no_registrado, :html => { class: 'form-horizontal', role: 'form' } do |f|
  - if @tema_no_registrado.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tema_no_registrado.errors.count, "error")}"
      %ul
        - @tema_no_registrado.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :titulo, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :titulo, class: 'form-control'
  .form-group
    = f.label :autor, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :autor, class: 'form-control'
  .actions
    = f.submit 'Guardar', class: 'btn btn-default'
