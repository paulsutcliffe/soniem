#region-contactos.container

  .region
    .region-title
      %h1.title
        = page_title!('contactos')

    .region
      - if current_admin
        .admin-control
          = link_to 'Crear Contacto', new_contacto_path, class: 'btn btn-primary'
    - @contactos.each do |contacto|
      = contacto.nombre
      = contacto.email
      = contacto.telefono
      = contacto.mensaje
      - if current_admin
        = link_to 'Eliminar', contacto, :method => :delete, :data => { :confirm => '¿Estás Seguro?' }, class: 'btn btn-danger'
